    "compilerOptions": {
        "outDir": "./dist/src",
        "baseUrl": "src",
        "sourceMap": true,
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
